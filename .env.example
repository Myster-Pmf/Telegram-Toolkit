# Application
APP_NAME=Telegram Toolkit
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Telegram API (get from https://my.telegram.org)
TELEGRAM_API_ID=
TELEGRAM_API_HASH=

# Database
# Options: sqlite, turso, postgresql
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/telegram_toolkit.db

# For Turso (optional)
# TURSO_DATABASE_URL=libsql://your-db.turso.io
# TURSO_AUTH_TOKEN=your-token

# For PostgreSQL (optional)
# POSTGRES_URL=postgresql://user:password@localhost:5432/telegram_toolkit

# Backup Database (optional)
BACKUP_ENABLED=false
# BACKUP_DATABASE_TYPE=turso
# BACKUP_DATABASE_URL=
# BACKUP_SYNC_MODE=scheduled
# BACKUP_SYNC_INTERVAL=1h

# LLM Configuration
# Options: gemini, openai_compatible
LLM_PROVIDER=gemini
LLM_API_KEY=
LLM_MODEL=gemini-2.0-flash

# For OpenAI-compatible APIs
# LLM_ENDPOINT=https://api.openai.com/v1
# LLM_MODEL=gpt-4o

# Web Server
HOST=127.0.0.1
PORT=8000

# Encryption
ENCRYPTION_KEY=

# Logging
LOG_LEVEL=INFO
